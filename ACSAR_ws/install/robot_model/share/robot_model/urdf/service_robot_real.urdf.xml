<?xml version="1.0"?>
<xacro:robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="service_robot">
    

    <xacro:property name="width" value="0.4" />
    <xacro:property name="length" value="0.4" />
    <xacro:property name="height" value="0.5" />
    <xacro:property name="wheel_radius" value="0.05" />
    <xacro:property name="wheel_width" value="0.06" />
    <xacro:property name="wheel_separation" value="0.3" />
    
    <!-- LiDAR mounting position -->
    <xacro:property name="lidar_x_offset" value="-0.15" />
    <xacro:property name="lidar_y_offset" value="0.0" />
    <xacro:property name="lidar_z_offset" value="0.37" />



    <!-- ROS 2 Control Configuration for Real Hardware -->
     <ros2_control name="ServiceRobotSystem" type="system">
        <hardware>
            <plugin>robot_control/ACSARInterface</plugin>
            <param name="serial_port">/dev/ttyUSB0</param>
            <param name="baud_rate">9600</param>
            <param name="wheel_diameter">0.1</param>
            <param name="wheel_radius">${wheel_radius}</param>
            <param name="wheel_separation">${wheel_separation}</param>
            <param name="lidar_x_offset">${lidar_x_offset}</param>
            <param name="lidar_y_offset">${lidar_y_offset}</param>
            <param name="lidar_z_offset">${lidar_z_offset}</param>
            <param name="odom_frame">odom</param>
            <param name="base_frame">base_link</param>
            <param name="lidar_frame">lidar_link</param>
        </hardware>

        <!-- Front Left Wheel -->
        <joint name="wheel_front_left_joint">
            <command_interface name="velocity">
                <param name="min">-0.5</param>
                <param name="max">0.5</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Front Right Wheel -->
        <joint name="wheel_front_right_joint">
            <command_interface name="velocity">
                <param name="min">-0.5</param>
                <param name="max">0.5</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Back Left Wheel -->
        <joint name="wheel_back_left_joint">
            <command_interface name="velocity">
                <param name="min">-0.5</param>
                <param name="max">0.5</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

         <!-- Back Right Wheel -->
        <joint name="wheel_back_right_joint">
            <command_interface name="velocity">
                <param name="min">-0.5</param>
                <param name="max">0.5</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>


   
      <!-- Robot Footprint -->

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.35 0.35 0.1"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.35 0.35 0.1"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="3.0"/>
            <inertia ixx="0.0306" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0613"/>
        </inertial>
    </link>

    <!-- Body with Rectangular Shape -->
   <link name="body">
        <visual>
            <geometry>
                <box size="0.05 0.35 0.35"/>
            </geometry>
            <origin xyz="-0.15 0 0.175" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.35 0.35"/>
            </geometry>
            <origin xyz="-0.15 0 0.175" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="4.2"/>
            <inertia ixx="0.08" ixy="0" ixz="0" iyy="0.08" iyz="0" izz="0.05"/>
        </inertial>
    </link>

    <!-- New Rectangular Plates -->
    <link name="front_plate_top">
        <visual>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <link name="front_plate_middle">
        <visual>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <link name="front_plate_bottom">
        <visual>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.25 0.35 0.03"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Wheels with enhanced properties -->
    <!-- Front Left Wheel -->
    <link name="wheel_front_left">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>
            <inertia ixx="0.00049" ixy="0" ixz="0" iyy="0.00049" iyz="0" izz="0.00092"/>
        </inertial>
    </link>

    <!-- Front Right Wheel -->
    <link name="wheel_front_right">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>
            <inertia ixx="0.00049" ixy="0" ixz="0" iyy="0.00049" iyz="0" izz="0.00092"/>
        </inertial>
    </link>

    <!-- Back Left Wheel -->
    <link name="wheel_back_left">
       <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>
            <inertia ixx="0.00049" ixy="0" ixz="0" iyy="0.00049" iyz="0" izz="0.00092"/>
        </inertial>
    </link>

    <!-- Back Right Wheel -->
    <link name="wheel_back_right">
       <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>
            <inertia ixx="0.00049" ixy="0" ixz="0" iyy="0.00049" iyz="0" izz="0.00092"/>
        </inertial>
    </link>


    <!-- Sensors -->
    <!-- Raspberry Pi Camera Module 2 -->
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.025 0.024 0.009"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.003"/>
            <inertia ixx="0.0000001" ixy="0" ixz="0" iyy="0.0000001" iyz="0" izz="0.0000001"/>
        </inertial>
    </link>

    <!-- LIDAR -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.035"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.00002" ixy="0" ixz="0" iyy="0.00002" iyz="0" izz="0.00006"/>
        </inertial>
    </link>

    <!-- IMU -->
    <link name="imu_link">
         <visual>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
        </visual>
        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
        </inertial>
    </link>

    <!-- Joints -->

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.12" rpy="0 0 0"/>
    </joint>
    
    <!-- Body to Base -->
    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0.05" rpy="0 0 3.14"/>  <!-- Keeping the same z-offset -->
    </joint>

     <!-- Joints for new front plates -->
    <joint name="front_plate_top_joint" type="fixed">
        <parent link="body"/>
        <child link="front_plate_top"/>
        <origin xyz="0.0 0 0.28" rpy="0 0 0"/>
    </joint>

    <joint name="front_plate_middle_joint" type="fixed">
        <parent link="body"/>
        <child link="front_plate_middle"/>
        <origin xyz="0.0 0 0.18" rpy="0 0 0"/>
    </joint>

    <joint name="front_plate_bottom_joint" type="fixed">
        <parent link="body"/>
        <child link="front_plate_bottom"/>
        <origin xyz="0.0 0 0.08" rpy="0 0 0"/>
    </joint>

     <!-- Wheels -->
    <joint name="wheel_front_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_front_left"/>
        <origin xyz="0.175 0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.01" friction="0.01"/>
        <limit effort="0.32" velocity="0.44"/>  <!-- Added torque limit of 0.32 N.m -->
    </joint>

    <joint name="wheel_front_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_front_right"/>
        <origin xyz="0.175 -0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.01" friction="0.01"/>
        <limit effort="0.32" velocity="0.44"/>  <!-- Added torque limit of 0.32 N.m -->
    </joint>

    <joint name="wheel_back_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_back_left"/>
        <origin xyz="-0.175 0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.01" friction="0.01"/>
        <limit effort="0.32" velocity="0.44"/>  <!-- Added torque limit of 0.32 N.m -->
    </joint>

    <joint name="wheel_back_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_back_right"/>
        <origin xyz="-0.175 -0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.01" friction="0.01"/>
        <limit effort="0.32" velocity="0.44"/>  <!-- Added torque limit of 0.32 N.m -->
    </joint>


    <!-- Sensors Joints -->
    <!-- Updated Sensor Placements -->
    <joint name="lidar_joint" type="fixed">
        <parent link="body"/>
        <child link="lidar_link"/>
        <origin xyz="-0.15 0.0 0.37" rpy="0 0 0"/>  <!-- Moved to top of body -->
    </joint>

    <joint name="camera_joint" type="fixed">
        <parent link="body"/>
        <child link="camera_link"/>
        <origin xyz="-0.1875 0 0.30" rpy="0 0 3.14"/>  <!-- Repositioned at back surface -->
    </joint>

    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0 0 0.05" rpy="0 0 0"/>  <!-- Kept same relative position -->
    </joint>

    
</xacro:robot>