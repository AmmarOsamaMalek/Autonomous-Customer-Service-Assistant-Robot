<?xml version="1.0"?>
<robot name="service_robot">
    <!-- Materials -->
    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>


    <transmission name="wheel_front_left_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_front_left_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="wheel_front_left_motor">
            <mechanicalReduction>1</mechanicalReduction>
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </actuator>
    </transmission>
    
    <transmission name="wheel_front_right_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_front_right_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="wheel_front_right_motor">
            <mechanicalReduction>1</mechanicalReduction>
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </actuator>
    </transmission>
    
    <transmission name="wheel_back_left_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_back_left_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="wheel_back_left_motor">
            <mechanicalReduction>1</mechanicalReduction>
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </actuator>
    </transmission>
    
    <transmission name="wheel_back_right_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_back_right_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="wheel_back_right_motor">
            <mechanicalReduction>1</mechanicalReduction>
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </actuator>
    </transmission>



    <ros2_control name="robot_system" type="system">
        <hardware>
            <plugin>gazebo_ros2_control/GazeboSystem</plugin>
        </hardware>
        
        <!-- Front Left Wheel -->
        <joint name="wheel_front_left_joint">
            <command_interface name="velocity">
                <param name="min">-2.0</param>
                <param name="max">2.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Front Right Wheel -->
        <joint name="wheel_front_right_joint">
            <command_interface name="velocity">
                <param name="min">-2.0</param>
                <param name="max">2.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Back Left Wheel -->
        <joint name="wheel_back_left_joint">
            <command_interface name="velocity">
                <param name="min">-2.0</param>
                <param name="max">2.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <!-- Back Right Wheel -->
        <joint name="wheel_back_right_joint">
            <command_interface name="velocity">
                <param name="min">-2.0</param>
                <param name="max">2.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>
    </ros2_control>


   
      <!-- Robot Footprint -->

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.35 0.35 0.1"/>  <!-- Changed from 0.4 to 0.35 -->
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.35 0.35 0.1"/>  <!-- Changed from 0.4 to 0.35 -->
            </geometry>
        </collision>
        <inertial>
            <mass value="3.0"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.0306" ixy="0" ixz="0" iyy="0.0306" iyz="0" izz="0.0613"/>
            <!-- Inertia recalculated for new dimensions and mass -->
        </inertial>
    </link>

    <gazebo reference="base_link">
        <mu1>0.5</mu1>
        <mu2>0.5</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <selfCollide>false</selfCollide>
    </gazebo>

    <!-- Body with Gazebo properties -->
    <link name="body">
        <visual>
            <geometry>
                <cylinder length="0.5" radius="0.175"/>  <!-- Adjusted radius to match base -->
            </geometry>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.5" radius="0.175"/>
            </geometry>
            <origin xyz="0 0 0.25" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="2.5"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.08" ixy="0" ixz="0" iyy="0.08" iyz="0" izz="0.05"/>
        </inertial>
    </link>

    <gazebo reference="body">
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <selfCollide>false</selfCollide>
    </gazebo>

    <!-- Wheels with enhanced properties -->
    <!-- Front Left Wheel -->
    <link name="wheel_front_left">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>  
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0009"/>
        </inertial>
    </link>

    <gazebo reference="wheel_front_left">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/Black</material>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <!-- Front Right Wheel -->
    <link name="wheel_front_right">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>  
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <gazebo reference="wheel_front_right">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/Black</material>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <!-- Back Left Wheel -->
    <link name="wheel_back_left">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>  
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <gazebo reference="wheel_back_left">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/Black</material>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <!-- Back Right Wheel -->
    <link name="wheel_back_right">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>  
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.07"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.375"/>  <!-- Adjusted as part of total 7kg weight -->
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <gazebo reference="wheel_back_right">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
        <fdir1>1 0 0</fdir1>
        <material>Gazebo/Black</material>
        <turnGravityOff>false</turnGravityOff>
    </gazebo>

    <!-- Sensors -->
    <!-- Raspberry Pi Camera Module 2 -->
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.025 0.024 0.009"/>  <!-- Actual size of Pi Camera Module 2 -->
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.025 0.024 0.009"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.003"/>  <!-- Approximate weight of Pi Camera -->
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- LIDAR -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.035"/>  <!-- Typical small LIDAR dimensions -->
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.04" radius="0.035"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- IMU -->
    <link name="imu_link">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Ultrasonic -->
    <link name="ultrasonic_link">
        <visual>
            <geometry>
                <cylinder length="0.02" radius="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Joints -->

    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0.0 0.0 ${-(0.12)}" rpy="0 0 0"/>
    </joint>
    
    <!-- Body to Base -->
    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0.05"/>
    </joint>

    <!-- Wheels -->
    <joint name="wheel_front_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_front_left"/>
        <origin xyz="0.175 0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <joint name="wheel_front_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_front_right"/>
        <origin xyz="0.175 -0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Add damping to continuous joints -->
    <joint name="wheel_back_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_back_left"/>
        <origin xyz="-0.175 0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.1" friction="0.1"/>
    </joint>
    

    <joint name="wheel_back_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_back_right"/>
        <origin xyz="-0.175 -0.2 0" rpy="-1.5708 0 0"/>  
        <axis xyz="0 0 1"/>
        <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <!-- Sensors Joints -->
    <!-- Camera joint - positioned just above the ultrasonic -->
    <joint name="camera_joint" type="fixed">
        <parent link="body"/>
        <child link="camera_link"/>
        <origin xyz="0.175 0 0.45" rpy="0 0 0"/>  <!-- Above ultrasonic, near upper-middle of robot -->
    </joint>


    <joint name="lidar_joint" type="fixed">
        <parent link="body"/>
        <child link="lidar_link"/>
        <origin xyz="0.0 0.0 0.5" rpy="0 0 0"/>  <!-- Offset to the right by 0.1m -->
    </joint>

    <joint name="imu_joint" type="fixed">
        <parent link="body"/>
        <child link="imu_link"/>
        <origin xyz="0 0 0.05"/>
    </joint>

    <joint name="ultrasonic_joint" type="fixed">
        <parent link="body"/>
        <child link="ultrasonic_link"/>
        <origin xyz="0.175 0 0.3" rpy="0 0 0"/>
    </joint>
    
    <!-- Add gazebo_ros2_control plugin -->
    <gazebo>
        <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
           <robot_param>robot_description</robot_param>
           <robot_param_node>robot_state_publisher</robot_param_node>
            <parameters>$(find robot_control)/config/diff_controller.yaml</parameters>
        </plugin>
    </gazebo>


    <!-- Joint properties -->
    <gazebo reference="wheel_front_left_joint">
        <implicitSpringDamper>1</implicitSpringDamper>
        <provideFeedback>true</provideFeedback>
    </gazebo>

    <gazebo reference="wheel_front_right_joint">
        <implicitSpringDamper>1</implicitSpringDamper>
        <provideFeedback>true</provideFeedback>
    </gazebo>

    <gazebo reference="wheel_back_left_joint">
        <implicitSpringDamper>1</implicitSpringDamper>
        <provideFeedback>true</provideFeedback>
    </gazebo>

    <gazebo reference="wheel_back_right_joint">
        <implicitSpringDamper>1</implicitSpringDamper>
        <provideFeedback>true</provideFeedback>
    </gazebo>

     <!-- Camera Plugin -->
     <gazebo reference="camera_link">
        <sensor type="camera" name="pi_camera">
            <update_rate>30.0</update_rate>
            <camera name="head">
                <horizontal_fov>1.085595</horizontal_fov>  <!-- 62.2 degrees -->
                <image>
                    <width>1920</width>
                    <height>1080</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.03</near>
                    <far>100</far>
                </clip>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.007</stddev>
                </noise>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <alwaysOn>true</alwaysOn>
                <updateRate>30.0</updateRate>
                <cameraName>pi_camera</cameraName>
                <imageTopicName>image_raw</imageTopicName>
                <cameraInfoTopicName>camera_info</cameraInfoTopicName>
                <frameName>camera_link</frameName>
            </plugin>
        </sensor>
    </gazebo>


    <!-- LIDAR Plugin -->
    <gazebo reference="lidar_link">

        <sensor name="lidar" type="ray">

            <always_on>true</always_on>

            <visualize>true</visualize>

            <update_rate>5</update_rate>

            <ray>

            <scan>

                <horizontal>

                <samples>360</samples>

                <resolution>1.000000</resolution>

                <min_angle>0.000000</min_angle>

                <max_angle>6.280000</max_angle>

                </horizontal>

            </scan>

            <range>

                <min>0.120000</min>

                <max>12.0</max>

                <resolution>0.015000</resolution>

            </range>

            <noise>

                <type>gaussian</type>

                <mean>0.0</mean>

                <stddev>0.01</stddev>

            </noise>

            </ray>

            <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">

            <ros>

                <remapping>~/out:=scan</remapping>

            </ros>

            <output_type>sensor_msgs/LaserScan</output_type>

            <frame_name>lidar_link</frame_name>

            </plugin>

        </sensor>

    </gazebo>
    <!-- IMU plugin -->
<!-- IMU plugin with complete specifications -->
    <gazebo reference="imu_link">
        <gravity>true</gravity>
        <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <visualize>true</visualize>
            <imu>
                <angular_velocity>
                    <x>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>0.00033</stddev> <!-- Based on low-frequency RMS noise spec -->
                            <bias_mean>0.0</bias_mean>
                            <bias_stddev>0.00020</bias_stddev> <!-- Based on ZRO variation -->
                        </noise>
                        </x>
                        <y>
                            <noise type="gaussian">
                                <mean>0.0</mean>
                                <stddev>0.00033</stddev>
                                <bias_mean>0.0</bias_mean>
                                <bias_stddev>0.00020</bias_stddev>
                            </noise>
                        </y>
                        <z>
                            <noise type="gaussian">
                                <mean>0.0</mean>
                                <stddev>0.00033</stddev>
                                <bias_mean>0.0</bias_mean>
                                <bias_stddev>0.00020</bias_stddev>
                            </noise>
                        </z>
                    </angular_velocity>
                    <linear_acceleration>
                        <x>
                            <noise type="gaussian">
                                <mean>0.0</mean>
                                <stddev>0.0400</stddev> <!-- Based on power spectral density spec -->
                                <bias_mean>0.0</bias_mean>
                                <bias_stddev>0.0050</bias_stddev> <!-- Based on initial calibration tolerance -->
                            </noise>
                        </x>
                        <y>
                            <noise type="gaussian">
                                <mean>0.0</mean>
                                <stddev>0.0400</stddev>
                                <bias_mean>0.0</bias_mean>
                                <bias_stddev>0.0050</bias_stddev>
                            </noise>
                        </y>
                        <z>
                            <noise type="gaussian">
                                <mean>0.0</mean>
                                <stddev>0.0400</stddev>
                                <bias_mean>0.0</bias_mean>
                                <bias_stddev>0.0060</bias_stddev> <!-- Slightly higher for Z-axis -->
                            </noise>
                        </z>
                    </linear_acceleration>
                </imu>
                <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
                    <ros>
                        <namespace>/</namespace>
                        <remapping>~/out:=imu/data</remapping>
                    </ros>
                    <initial_orientation_as_reference>false</initial_orientation_as_reference>
                    <frame_name>imu_link</frame_name>
                    <gaussian_noise>0.00033</gaussian_noise>
                    <updateRate>100.0</updateRate>
                    <bodyName>imu_link</bodyName>
                    <topicName>imu/data</topicName>
                    <serviceName>imu_service</serviceName>
                    <xyzOffset>0 0 0</xyzOffset>
                    <rpyOffset>0 0 0</rpyOffset>
                </plugin>
            </sensor>
    </gazebo>

    
</robot>